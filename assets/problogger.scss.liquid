.owl-carousel .owl-item h4 {
  text-align: center;
 }

.owl-item  {
  padding : 0px;
 }

.owl-carousel .owl-item a {
  text-decoration: none;
}

.owl-carousel .owl-item img { 
  object-fit: cover; 
  height: 96%; 
  width: 96%; 
  vertical-align: middle; 
  padding: 0px; 
}

.carousel-image-wrapper { 
  width: 100%; 
  vertical-align: middle; 
  text-align: center; 
  height: 300px; 
  
  @media screen and (min-width: 769px) {
    height: 200px; 
  }
  
}

.carousel-text-wrapper {
  margin-top: 2px;
  text-align: center; 
}

.carousel-text-price {
  text-align: center; 
}

.carousel-text-excerpt {
  text-align: center; 
}
