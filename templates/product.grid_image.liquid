      {% include 'related-products' %}
      {% endif %}
    </div>
    <style>
      .main-container .main-wrapper {
        padding-top: 0;
        padding-bottom: 0; 
      }
      .main-container {
        padding-bottom: 0;
      }
    </style>
  </div>
</div>
{% endif %}
